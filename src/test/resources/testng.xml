<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="E-commerce Test Suite" verbose="1">
    <listeners>
        <listener class-name="com.ecommerce.test.utilities.Listeners"/>
    </listeners>
    <test name="Amazon India Tests">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.ecommerce.test.tests.ProductSearchTest"/>
            <class name="com.ecommerce.test.tests.ProductPageValidationTest"/>
            <class name="com.ecommerce.test.tests.SearchFunctionalityTest"/>
        </classes>
    </test>
</suite>

